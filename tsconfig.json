{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@core/*": ["./core/src/*"],
      "@extensions/*": ["./extensions/*"],
      "@config/*": ["./config/*"],
      "@src/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*",
    "extensions/**/*",
    "config/**/*",
    "core/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "core/node_modules",
    "dist"
  ]
}
